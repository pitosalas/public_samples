<div class="card mb-2">
  <div class="card-body">
    <h5 class="card-title text-muted">
      <%= post.username %>
      <small>-<%= time_ago_in_words post.created_at %> ago</small>
    </h5>
    <div class="card-text lead mb-2"><%= post.body %></div>
    <%= link_to "Repost (#{post.reposts_count})", "#", class: "card-link" %>
    <%= link_to "Like (#{post.likes_count})", "#", class: "card-link" %>
  </div>
</div>
