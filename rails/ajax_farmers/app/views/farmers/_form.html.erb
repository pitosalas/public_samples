<%= form_with(model: @farmer, local: false) do |form| %>
  <p>
    Name: <%= form.text_field :name %>
    (updated: <span class="farmer-updated-at"><%= @farmer.updated_at %></span>)
  </p>
  <p>
    Cows: <%= render 'cows/index_list' %>
  </p>

  <% unless @farmer.new_record? %>
    <div id="cows-form">
      <%= form.submit "new cow" %>
    </div>
  <% end %>

  <p>
    <%= form.submit "update farmer"%>
  </p>
<% end %>
